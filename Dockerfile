# Укажите официальный образ Node.js как базовый
FROM node:16-alpine

# Установите рабочий каталог для приложения
WORKDIR /app

# Копируйте файл package.json и package-lock.json в рабочий каталог
COPY package*.json ./

# Установите зависимости проекта
RUN npm ci 

# Копируйте все файлы и каталоги проекта в рабочий каталог
COPY . .

# Укажите порт, который будет использоваться приложением
EXPOSE 3000

# Запустите телеграм-бота
CMD [ "npm", "start" ]
